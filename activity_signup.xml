<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_signup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/background"
    tools:context=".Signup">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/safe_smart"
            android:textColor="@android:color/white"
            android:textSize="46sp"
            android:fontFamily="@font/poppins_thin"
            android:layout_marginBottom="0dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home"
            android:textColor="@android:color/white"
            android:textSize="50sp"
            android:fontFamily="@font/tan_pearl"
            android:layout_marginBottom="40dp" />

        <!-- USERNAME LABEL -->
        <TextView
            android:id="@+id/tvUsernameLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/username"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginBottom="6dp" />

        <!-- USERNAME FIELD -->
        <EditText
            android:id="@+id/username_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:background="@drawable/roundededge"
            android:fontFamily="@font/poppins_regular"
            android:hint="@string/sample1"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColor="@android:color/white"
            android:textColorHint="@color/darker_gray"
            android:maxLines="1"
            android:imeOptions="actionNext"
            android:autofillHints="username" />

        <!-- EMAIL LABEL -->
        <TextView
            android:id="@+id/tvEmailLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/email_address"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginBottom="6dp" />

        <!-- EMAIL FIELD -->
        <EditText
            android:id="@+id/email_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:background="@drawable/roundededge"
            android:fontFamily="@font/poppins_regular"
            android:hint="@string/sample"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textColor="@android:color/white"
            android:textColorHint="@color/darker_gray"
            android:maxLines="1"
            android:imeOptions="actionNext"
            android:autofillHints="emailAddress" />

        <!-- PASSWORD LABEL -->
        <TextView
            android:id="@+id/tvPasswordLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/password"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginBottom="6dp" />

        <!-- PASSWORD FIELD -->
        <EditText
            android:id="@+id/password_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/roundededge"
            android:fontFamily="@font/poppins_regular"
            android:hint="@string/password"
            android:inputType="textPassword|textNoSuggestions"
            android:padding="10dp"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/darker_gray"
            android:layout_marginBottom="30dp"
            android:maxLines="1"
            android:imeOptions="actionDone"
            android:autofillHints="password"
            android:importantForAutofill="yes" />

        <!-- Login Button -->
        <Button
            android:id="@+id/btnLogin"
            android:text="@string/continue1"
            android:textAllCaps="false"
            android:background="@drawable/btn_outline"
            android:textColor="@android:color/white"
            android:layout_marginBottom="30dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Register Section (Changed Text) -->
        <TextView
            android:text="@string/register_3"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvSignup"
            android:text="@string/login1"
            android:textColor="#0081cc"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>
</ScrollView>
